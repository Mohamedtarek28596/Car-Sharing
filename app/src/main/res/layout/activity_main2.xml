<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example6767gh.mytestauthentication.MainActivity2"
    android:background="@drawable/driver2"
    >


    <Button
        android:text="Sign up"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/buttonSignUp"
        android:onClick="signUpButton"
        android:alpha="1"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:background="@drawable/button"
        android:layout_above="@+id/textViewLogin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:textColorLink="?android:attr/textColorPrimaryInverse"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="24sp" />


    <Button
        android:text="I have an account "
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/textViewLogin"
        android:allowUndo="false"
        android:alpha="1"
        android:layout_marginBottom="24dp"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:background="@drawable/button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textColorHint="@color/common_google_signin_btn_text_dark_default"
        android:textSize="24sp" />


    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_alignLeft="@+id/textView10"
        android:layout_marginStart="51dp"
        android:layout_marginLeft="51dp"
        android:text="Account"
        android:textColor="@color/colorPrimary"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/textView10"
        style="@style/Animation.Design.BottomSheetDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Create New      "
        android:textColor="@color/colorPrimary"
        android:textSize="50sp" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/oe"
        android:id="@+id/imageView11"
        android:layout_alignBottom="@+id/editTextEmail"
        android:layout_toLeftOf="@+id/textView11"
        android:layout_toStartOf="@+id/textView11" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/op"
        android:id="@+id/imageView12"
        android:layout_alignTop="@+id/editTextPassword"
        android:layout_alignLeft="@+id/imageView11"
        android:layout_alignStart="@+id/imageView11" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextEmail"
        android:hint="Email Address"
        android:background="@android:color/transparent"
        android:alpha="1"
        style="?android:attr/windowAnimationStyle"
        android:textColorLink="?attr/actionMenuTextColor"
        android:textSize="26dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_above="@+id/buttonSignUp"
        android:layout_toRightOf="@+id/imageView12"
        android:layout_toEndOf="@+id/imageView12"
        android:layout_marginBottom="91dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editTextPassword"
        android:hint="Password"
        android:background="@android:color/transparent"
        android:alpha="1"
        android:textSize="26sp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:layout_above="@+id/buttonSignUp"
        android:layout_alignLeft="@+id/editTextEmail"
        android:layout_alignStart="@+id/editTextEmail"
        android:layout_marginBottom="23dp" />

    <TextView
        android:text="Please enter a valid Email or Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="24sp"
        android:layout_above="@+id/imageView11"
        android:layout_toRightOf="@+id/progressbar"
        android:layout_toEndOf="@+id/progressbar"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:alpha="0.8" />


</RelativeLayout>