<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_edit_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example6767gh.mytestauthentication.EditProfile">


    <ProgressBar
        android:id="@+id/progressbar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />


    <TextView
        android:text="user email"
        android:layout_width="250dp"
        android:layout_marginTop="14dp"
        android:id="@+id/tvProfileEmail1"
        android:textSize="15sp"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/tvProfileName"
        android:layout_alignStart="@+id/tvProfileName"
        android:layout_height="wrap_content" />


    <ImageView
        app:srcCompat="@drawable/imagep"
        android:id="@+id/imageView8"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignLeft="@+id/imageView7"
        android:layout_alignStart="@+id/imageView7"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:alpha="0.5" />

    <ImageView
        app:srcCompat="@drawable/imagee"
        android:id="@+id/imageView6"
        android:layout_width="30dp"
        android:layout_alignBottom="@+id/textView7"
        android:layout_height="30dp"
        android:alpha="0.5"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4" />

    <ImageView
        android:id="@+id/ivProfilePic"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        app:srcCompat="@drawable/imageage"
        android:id="@+id/imageView7"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:alpha="0.5"
        android:layout_below="@+id/tvProfileEmail1"
        android:layout_alignLeft="@+id/imageView6"
        android:layout_alignStart="@+id/imageView6" />

    <TextView
        android:text="Age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="16sp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_alignBottom="@+id/imageView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <ImageView
        app:srcCompat="@drawable/img"
        android:id="@+id/imageView9"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:alpha="0.5"
        android:layout_below="@+id/tvProfileEmail"
        android:layout_alignLeft="@+id/imageView8"
        android:layout_alignStart="@+id/imageView8" />

    <TextView
        android:text="Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:id="@+id/textView8"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_alignBottom="@+id/imageView9"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />


    <ImageView
        app:srcCompat="@drawable/profile"
        android:id="@+id/imageView4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:alpha="0.5"
        android:layout_below="@+id/ivProfilePic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Name "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="15sp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp" />

    <EditText
        android:id="@+id/tvProfileAge"
        android:text="Age: "
        android:textSize="15sp"
        android:textColor="@color/common_google_signin_btn_text_light_default"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/tvProfileEmail1"
        android:layout_alignStart="@+id/tvProfileEmail1" />

    <EditText
        android:id="@+id/tvProfileEmail"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="15sp"
        android:textColor="@color/common_google_signin_btn_text_light_default"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/tvProfileAge"
        android:layout_alignStart="@+id/tvProfileAge" />

    <EditText
        android:text="my number"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/ivNumber"
        android:textSize="15sp"
        android:textColor="@color/common_google_signin_btn_text_light_default"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/tvProfileEmail"
        android:layout_alignStart="@+id/tvProfileEmail" />

    <Button
        android:id="@+id/btnProfileUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_below="@+id/ivNumber"
        android:layout_alignRight="@+id/ivProfilePic"
        android:layout_alignEnd="@+id/ivProfilePic"
        android:layout_marginTop="50dp" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="lastName"
        android:ems="10"
        android:id="@+id/tvProfileLast"
        android:textSize="15sp"
        android:alpha="0.9"
        android:textColor="@color/common_google_signin_btn_text_light_default"
        android:layout_alignBaseline="@+id/tvProfileName"
        android:layout_alignBottom="@+id/tvProfileName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="9dp"
        android:layout_marginEnd="9dp" />

    <TextView
        android:text="Email Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textSize="15sp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_below="@+id/tvProfileName"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="12dp" />


    <TextView
        android:text="Trusted Email Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="15sp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_below="@+id/tvProfileAge"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginTop="12dp" />

    <EditText
        android:id="@+id/tvProfileName"
        android:text="Name"
        android:textSize="15sp"
        android:textColor="@color/common_google_signin_btn_text_light_default"
        android:layout_width="150dp"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_height="wrap_content" />


</RelativeLayout>